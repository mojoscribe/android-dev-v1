<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="12dp" >

    <ImageView
        android:id="@+id/publishPostFeedImageView"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/text_color_black"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <CheckBox
        android:id="@+id/publishPostFeedCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/publishPostFeedImageView"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:button="@drawable/selector_check_box_button"
        android:checked="false" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/publishPostFeedImageView"
        android:layout_toRightOf="@+id/publishPostFeedCheckBox"
        android:orientation="vertical"
        android:paddingBottom="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp" >

        <TextView
            android:id="@+id/publishPostFeedTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="TextView"
            android:textColor="@color/text_color_black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/publishPostFeedDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="TextView"
            android:textColor="@color/text_color_black"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/publishPostFeedRatingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/publishPostFeedImageView"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="@drawable/button_colored_background"
        android:drawableLeft="@drawable/star_icon"
        android:drawablePadding="3dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="12,000"
        android:textColor="#ffffff"
        android:textSize="10sp"
        android:visibility="invisible" />

</RelativeLayout>