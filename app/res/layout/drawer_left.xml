<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CE0000" >

    <include
        android:id="@+id/profileIncluded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/MenuIncluded"
        layout="@layout/drawer_login_profile"
        android:paddingBottom="10dp" />

    <include
        android:id="@+id/MenuIncluded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        layout="@layout/action_bar_left_drawer" />

    <ListView
        android:id="@+id/leftDrawerListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/profileIncluded"
        android:divider="@null"
        android:dividerHeight="0dp" >
    </ListView>

</RelativeLayout>