<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/notificationRowImageView"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/text_color_black"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/notificationRowTextView"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/notificationRowImageView"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/notificationRowImageView"
        android:layout_toRightOf="@+id/notificationRowImageView"
        android:text="" 
        android:textColor="@color/text_color_black"
        android:gravity="center_vertical"/>
    

</RelativeLayout>
